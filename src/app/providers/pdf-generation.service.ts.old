export class PdfGenerationService {

  offsetX = 0;
  logozz: any = logoData;
  doc: any;
  KOPF_TEXTF_OFFSET = 0;
  POS_TEXTP_OFFSET = 0;
  FUSS_OFFSET = 0;
  POS_TEXT_TOT_LINE = 0;
  CURRENT_POS = 1;
  CURRENT_BODY_LINE = 0;
  MAX_BODY_LINE = 15;
  INTERLINEA = 3;

  intestazione: string;
  tipoDocumento: string;
  dataDocumento: string;
  numeroFornitore: string;
